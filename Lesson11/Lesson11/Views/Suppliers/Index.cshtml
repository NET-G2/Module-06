<div class="row">
    <div class="px-4 pb-4">
        <ejs-grid id="suppliers-list"
                  dataSource="@ViewBag.Suppliers"
                  gridLines="Vertical"
                  allowSorting="true">
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Идентификатор" field="Id" typeof="text"></e-grid-column>
                <e-grid-column headerText="Полное имя" field="FullName" typeof="text"></e-grid-column>
                <e-grid-column headerText="Номер телефона" field="PhoneNumber" typeof="text"></e-grid-column>
                <e-grid-column headerText="компания" field="Company" typeof="text"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>